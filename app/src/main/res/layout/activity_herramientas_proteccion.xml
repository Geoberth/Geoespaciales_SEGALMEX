<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apicola.HerramientasProteccion">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="¿Actualmente con qué herramientas y equipo de protección cuenta para revisar sus abejas y apiarios?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Equipos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spn_herr_api"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>

        <EditText
            android:enabled="false"
            android:hint="Especificar otro"
            android:id="@+id/edt_tmp_api_hr_1"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Tiempo de haberlo adquirido (años)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:inputType="numberDecimal"
            android:enabled="false"
            android:maxLines="1"
            android:id="@+id/edt_tmp_api_hr_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Costo ($) "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <EditText
            android:inputType="numberDecimal"
            android:enabled="false"
            android:maxLines="1"
            android:id="@+id/edt_tmp_api_hr_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_add_otr_eqi_api"
            android:text="AGREGAR  OTRO EQUIPO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/apicola_next_eqi_hr"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:backgroundTint="@color/mtrl_on_primary_emphasis_high_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="Siguiente"
            app:iconPadding="20dp"
            app:icon="@android:drawable/ic_input_add"
            />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>