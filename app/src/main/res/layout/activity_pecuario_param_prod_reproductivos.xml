<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pecuario.PecuarioParamProdReproductivos">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="PARÁMETROS PRODUCTIVOS Y REPRODUCTIVOS"
                android:textSize="19sp" />



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Porcentaje de hembras paridas (%)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosporchembras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>


            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="¿Cuál es el tiempo que pasa entre un parto a otro de una hembra? (días)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivostiempopartos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>


            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Edad al primer parto (meses)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosedadpartouno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>


            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Edad al desecho de hembras (años)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosedaddeshembras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Número de crías por hembra parida"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosnumcrias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Número de partos al año en el rebaño "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosnumpartosrebanio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Peso de las crías al nacer (kg)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivospesocrias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>




            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Peso de las crías al destete (kg)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivospesocdestete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Edad al destete (meses)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosedaddestete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Mortalidad pre destete (%)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosmortaldestete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>


            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Peso a la venta (animales de engorda) (kg)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivospesoventa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>


            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Edad a la venta de los animales de engorda (meses)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosedadventa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>




            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Número de vientres en ordeño en el año"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosnumvientres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Volumen de producción de leche al día (leche) (l)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosvolproducleche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>





            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Número de días que ordeña en el año (leche)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosnumdiasordenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>



            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Volumen de producción de leche por vaca al día (leche) (l)"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosvolproduclechevaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>





            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Número de crías producidas en un año "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosnumcriasprodanio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>




            <!--  -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Número de hembras reproductoras en el año "
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edtParametrosreproductivosnumhembrasreprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:inputType="numberDecimal"/>






            <!--
            <Button
                android:id="@+id/pecuario_next_param_reproductivos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:text="Siguiente" /> -->



            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/pecuario_next_param_reproductivos"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:backgroundTint="@color/mtrl_on_primary_emphasis_high_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="30dp"
                android:text="Siguiente"
                app:iconPadding="20dp"
                app:icon="@android:drawable/ic_input_add"
                />



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>