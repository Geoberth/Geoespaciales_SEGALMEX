<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".drawer.fragment_drawer.LiconsaPrecios">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="122dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pasl_o_tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROGRAMA DE ABASTO RURAL"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pasl_o_tvTitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="PRODUCTOS DE LA CANASTA BÁSICA"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Folio:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/borde"
                android:entries="@array/Estados2021"
                android:spinnerMode="dropdown"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="#000000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Producto:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/borde"
                android:entries="@array/productos"
                android:spinnerMode="dropdown"
                android:textSize="8sp" />

            <Button
                android:id="@+id/btnCamara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Capturar Foto"/>

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/image_icon_compact_camera_pic_512x512"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/txtlogo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto capturada"
                android:textColor="#000000"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:text="Tomar Evidencia"/>


        </LinearLayout>


    </ScrollView>

</FrameLayout>