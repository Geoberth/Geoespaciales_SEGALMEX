<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PGOperativoGranos.PGOperativoGranos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-361dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PROGRAMA PRECIOS DE GARANTÍA A PRODUCTOS ALIMENTARIOS BÁSICOS"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="ENCUESTA PARA EL ENCARGADO DEL CENTRO DE ACOPIO"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pasl_o_tvFech"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pasl_o_txtFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="DATOS DEL CENTRO DE ACOPIO:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nombre del centro de acopio:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pre_garan_txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textAutoCorrect"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Número del centro de acopio:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/pre_garan_txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Entidad Federativa:"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/pre_garan_spin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/borde"
                android:entries="@array/Estados2021"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Municipio:"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/pre_garan_spin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/borde"
                android:entries="@array/Aguascalientes2021"
                android:spinnerMode="dialog" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Localidad:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/pg_granos_txtLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords|textAutoCorrect" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Calle:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/pre_garan_txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords|textAutoCorrect"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Código Postal:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/pre_garan_txt6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="ENCUESTA PARA PERSONAL OPERATIVO DEL CENTRO DE ACOPIO"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1. ¿Conoce las Reglas de Operación del Programa Precios de Garantía a Productos Alimentarios Básicos?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg1"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2. ¿Se le da a conocer la fecha en que inicia cada periodo de acopio en SEGALMEX?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg2"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="3. ¿Conoce los criterios de elegibilidad para que un productor sea sujeto de apoyo?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg3"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="4. Del proceso para registrar a un productor en el padrón, marque los que aplica al registrarlo:"
                android:textColor="#000000" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch1"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Recibe del productor documento o folio que acredite su registro en el padrón (Censo del Bienestar, producción para el Bienestar), en todo caso, registra al productor en el padrón." />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch2"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Recibe del productor Identificación oficial vigente." />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch3"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Recibe número de cuenta CLABE o algún método de pago en caso de pequeños productores." />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch4"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Recibe del productor el documento que acredite la posesión del predio sembrado o la renta del mismo." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="5. Seleccione de la siguiente lista de opciones aquellos recursos con los que cuenta para la operación del programa"
                android:textColor="#000000" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch5"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Personal" />


            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch6"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Equipamiento." />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch7"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Servicios de almacenamiento." />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch8"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Beneficio." />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch9"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Transporte." />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pre_garan_ch10"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Otro" />


            <EditText
                android:id="@+id/pre_garan_txt10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Especifique:"
                android:visibility="gone"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="6. ¿Comunica al productor el resultado de la calidad de la muestra y las deducciones que serán aplicadas?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg6"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="7. ¿Entrega al productor el Documento de Compra (DC-01) que indica la calidad y el pesaje del grano, firmada por el jefe de centro de acopio?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg7"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="8. ¿Ha recibido de un productor ambos granos (maíz y frijol) en el mismo período?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg8"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="9. ¿Se le capacitó sobre el método de estiba y almacenamiento del producto?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg9"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="10. ¿Realizó actividades de difusión ante la población respecto de las acciones de Contraloría Social?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg10"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="11. ¿Se toman las medidas de salud procedentes en el Centro de Acopio para prevenir cualquier enfermedad, especialmente las contagiosas?"
                android:textColor="#000000" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rg11"
                android:orientation="horizontal">

                <RadioButton

                    android:id="@+id/pre_garan_ra25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí" />

                <RadioButton

                    android:id="@+id/pre_garan_ra26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />

                <RadioButton

                    android:id="@+id/pre_garan_ra27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A" />

                <EditText
                    android:id="@+id/pre_garan_txt16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="Observaciones"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="12. ¿Qué acciones considera que necesita realizar el Programa para mejorar la atención otorgada a los beneficiarios?"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/pre_garan_txt17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/pre_garan_sig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="@color/mtrl_on_primary_emphasis_high_type"
                android:text="Siguiente"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:icon="@android:drawable/ic_input_add"
                app:iconPadding="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
