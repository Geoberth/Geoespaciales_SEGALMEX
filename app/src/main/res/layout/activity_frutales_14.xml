<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frutales.frutales_14">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:textAlignment="center"
            android:textSize="16dp"
            android:id="@+id/tx_tit_pos_cos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manejo post-cosecha" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Realiza algún manejo postcosecha?" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:onClick="manePostCostFrt"
                android:id="@+id/rd_si_ps_fe_frt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si" />

            <RadioButton
                android:onClick="manePostCostFrt"
                android:id="@+id/rd_no_ps_fe_frt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Cuál?" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:onClick="manejoPosCscFrt"
            android:id="@+id/ck_pas_fe_frt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pastoreo" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:onClick="manejoPosCscFrt"
            android:id="@+id/ck_pi_fe_frt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizca o pepena " />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:onClick="manejoPosCscFrt"
            android:id="@+id/ck_vn_fe_frt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Venta de esquilmos " />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:onClick="manejoPosCscFrt"
            android:id="@+id/ck_inc_fe_frt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incorporación al suelo " />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:onClick="manejoPosCscFrt"
            android:id="@+id/ck_qe_fe_frt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quema " />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:onClick="manejoPosCscFrt"
            android:id="@+id/ck_qe_fe_6_frt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Poda" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:onClick="manejoPosCscFrt"
            android:id="@+id/ck_qe_fe_7_frt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otro (Especificar)" />

        <EditText
            android:maxLines="1"
            android:enabled="false"
            android:id="@+id/ed_otr_frt"
            android:hint="Especificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fr14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/mtrl_on_primary_emphasis_high_type"
            android:text="Siguiente"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:icon="@android:drawable/ic_input_add"
            app:iconPadding="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>