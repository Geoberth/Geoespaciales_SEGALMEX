<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PGOperativoEstimulos.PGOperativoEstimulos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="122dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pasl_o_tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="PROGRAMA PRECIOS DE GARANTÍA A PRODUCTOS ALIMENTARIOS BÁSICOS"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pasl_o_tvTitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="ENCUESTA PARA EL RESPONSABLE DE VENTANILLA (ARROZ, TRIGO, MAÍZ DE MEDIANOS PRODUCTORES)"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pasl_o_tvFech"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pasl_o_txtFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/pasl_o_tvSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="DATOS VENTANILLA:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pg_granos_tvnombrecentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Nombre Ventanilla:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pg_granos_txtnombrecentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords|textAutoCorrect" />

            <TextView
                android:id="@+id/pg_granos_tvnumcentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Número del centro de acopio:"
                android:visibility="gone"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pg_granos_txtnumcentro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:ems="10"/>

            <TextView
                android:id="@+id/pg_granos_txtEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Entidad Federativa:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/pg_granos_spiEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/borde"
                android:entries="@array/Estados2021"
                android:spinnerMode="dropdown"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pg_granos_txtMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Municipio:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/pg_granos_spiMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/borde"
                android:enabled="false"
                android:entries="@array/Aguascalientes2021"
                android:spinnerMode="dropdown"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pg_granos_tvLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Localidad/Colonia:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pg_granos_txtLocalidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords|textAutoCorrect" />

            <TextView
                android:id="@+id/pg_granos_tvCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Calle:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pg_granos_txtCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords|textAutoCorrect" />

            <TextView
                android:id="@+id/pg_granos_tvCP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Código Postal:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pg_granos_txtCP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="5"
                android:inputType="number" />

            <TextView
                android:id="@+id/pasl_o_tvSubtitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="ENCUESTA PARA EL PERSONAL OPERATIVO DE VENTANILLA:"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvUno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. ¿Conoce las Reglas de Operación del Programa Precios de Garantía a Productos Alimentarios Básicos?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvDos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. ¿Conoce la fecha de cada ciclo en la que se abre el registro de usuarios para arroz, trigo y/o maíz de medianos productores del Programa de Precios de Garantía a Productos Alimentarios Básicos?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvTres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. ¿Cuenta con oficios y/o correos de la notificación a SEGALMEX para la apertura de ventanillas en tiempo?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvCuatro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. ¿Ha sido capacitado como ventanilla para la operación del Programa y el uso del sistema?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvCinco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. ¿Conoce los criterios de elegibilidad para que un productor sea sujeto a los apoyos?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvSeis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. ¿Conoce el procedimiento para registrar a un productor en el Programa?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="7. Marque la información que solicita al productor para abrir expediente:"
                android:textColor="#000000" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pg_granos_ch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Documento o folio que acredite su registro en el programa (Censo del Bienestar, Producción para el Bienestar, padrón SEGALMEX)" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pg_granos_ch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="CURP" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pg_granos_ch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="RFC" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pg_granos_ch4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="INE" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pg_granos_ch5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Estado de cuenta bancaria" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pg_granos_ch6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:enabled="true"
                android:text="Documentación de acreditación de predios" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvOcho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. ¿Difundió ante la población las actividades que se llevan a cabo respecto de la Contraloría Social?"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pg_granos_tvNueve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8. ¿Se toman las medidas de salud procedentes para prevenir cualquier enfermedad, especialmente las contagiosas?"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/pg_granos_rbSi9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Si"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNO9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pg_granos_rbNa9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>


            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

                android:id="@+id/btn_Avanzar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/mtrl_on_primary_emphasis_high_type"
                android:text="Siguiente"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:icon="@android:drawable/ic_input_add"
                app:iconPadding="20dp" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>