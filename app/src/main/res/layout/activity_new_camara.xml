<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewCamara"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:gravity="center_vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-183dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">


    <Button
        android:id="@+id/btnCamara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="Capturar Foto 1"/>

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/image_icon_compact_camera_pic_512x512"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtlogo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto 1 capturada"
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnCamara2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:visibility="visible"
        android:text="Capturar Foto 2"/>

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/image_icon_compact_camera_pic_512x512"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtlogo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto 2 capturada"
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnCamara3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:text="Capturar Foto 3"/>

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@drawable/image_icon_compact_camera_pic_512x512"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtlogo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foto 3 capturada"
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="15sp" />


    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:text="Empezar Cuestionario"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>