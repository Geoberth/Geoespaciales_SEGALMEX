                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pasl_o_txtApaterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords|textAutoCorrect" />

            <TextView
                android:id="@+id/pasl_o_tvAmaterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Apellido Materno:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pasl_o_txtAmaterno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textCapWords|textAutoCorrect" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pasl_o_tvSexo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sexo:"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/pasl_o_rbHombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hombre"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/pasl_o_rbMujer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mujer"
                        android:textColor="#000000"
                        android:textSize="15sp" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/pasl_o_tvEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Edad:"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/pasl_o_txtEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
